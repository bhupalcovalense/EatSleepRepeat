<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_25"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find you hCue account"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40"
        android:text="Enter your email, phonenumber or username"
        android:textSize="@dimen/text_size_15" />

    <EditText
        android:maxLength="32"
        android:maxEms="5"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/login_text_feild"
        android:id="@+id/edt_uservalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/search_btn_for"
        android:textSize="@dimen/text_size_15"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="SEARCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>