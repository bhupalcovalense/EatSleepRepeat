<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_7"
        android:paddingTop="@dimen/margin_7"
        android:layout_marginTop="@dimen/margin_30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="Mobile Number"
            android:textColor="#838383"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/number_text_feild">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="+91"
                android:editable="false"
                android:clickable="false"
                android:paddingLeft="@dimen/margin_20"
                android:textSize="@dimen/text_size_15"
                android:layout_weight="0.2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/num_border_book"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textSize="@dimen/margin_15"
                android:paddingLeft="@dimen/margin_20"
                android:background="@null"
                android:hint="Enter Mobile Number"
                android:maxLength="10"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/or_border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_margin="@dimen/margin_5"
            android:textSize="@dimen/margin_15"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/or_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_7"
        android:paddingTop="@dimen/margin_7"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="Telephone Number"
            android:textColor="#838383"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/number_text_feild">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="044"
                android:paddingLeft="@dimen/margin_20"
                android:textSize="@dimen/text_size_15"
                android:layout_weight="0.2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/num_border_book"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textSize="@dimen/text_size_15"
                android:paddingLeft="@dimen/margin_20"
                android:background="@null"
                android:hint="Enter telephone Number"
                android:maxLength="10"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/or_border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_margin="@dimen/margin_5"
            android:textSize="@dimen/text_size_15"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/or_border"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15"
        android:gravity="center_horizontal"
        android:text="Don't have number?"
        android:textColor="#48B09E"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15"
        android:gravity="center"
        android:text="BOOK"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/submit_btn"
        android:textColor="@android:color/white"/>

</LinearLayout>