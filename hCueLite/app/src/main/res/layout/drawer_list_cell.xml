<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_7"
        android:paddingTop="@dimen/margin_7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDrawerOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/quickbook_icon_menu"/>

        <TextView
            android:id="@+id/tvDrawerOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="Quick Appointment"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10"
            android:background="@drawable/num_circle_icon"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/margin_15"
            />

    </LinearLayout>

</LinearLayout>