<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:background="#EDEDED"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llPastTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPastTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="PAST"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tvPastTabLine"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@drawable/active_tab_icon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTodayTab"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTodayTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="TODAY"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tvTodayTabLIne"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@drawable/active_tab_icon"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFutureTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFutureTab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="FUTURE"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tvFutureTabLine"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@drawable/active_tab_icon"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" >

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>