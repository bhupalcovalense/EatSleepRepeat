<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_7"
        android:paddingTop="@dimen/margin_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDrawerOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/patient_profile_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPatientName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:text="Satish Narayan K"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvPatientAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="right"
                    android:text="34/M"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDrawerOperation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    android:paddingBottom="3dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:singleLine="true"
                    android:text="Last Visited: 2 days ago"/>
                <TextView
                    android:id="@+id/tvToken"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:singleLine="true"
                    android:text="TOKEN : 033"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center"
                    android:text="IN"
                    android:background="@drawable/in_gray_border"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/or_border"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>